{
    "name": "sion/admin",
    "description": "",
    "authors": [
        {
            "name": "Dart Uchiwa",
            "email": "Dartuchiwa@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "illuminate/support": "4.1.*",
        "bkwld/croppa": "~3.0"
        
    },
    "require-dev": {
        "components/admin-js": "dev-master"
    },
    "autoload": {
        "classmap": [
            "src/migrations",
            "src/controllers",
            "src/seeds"
        ],
        "psr-0": {
            "Sion\\Admin\\": "src/"
        }
    },
    "mimimum-stability": "alpha" ,
    "config": {
        "component-dir": "public/components"
    },
    "scripts": {
		"post-install-cmd": [
			"php ../../../artisan clear-compiled",
			"php ../../../artisan optimize",
            "php ../../../artisan asset:publish --bench='sion/admin'"
		],
		"post-update-cmd": [
			"php ../../../artisan clear-compiled",
			"php ../../../artisan optimize",
            "php ../../../artisan asset:publish --bench='sion/admin'"
		],
		"post-create-project-cmd": [
			"php ../../../artisanartisan key:generate"
		]
	}
}
